<PropertyList>

  <path>panel-light.ac</path>
  <nopreview/>

  <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <object-name>light</object-name>
    <position>
      <x>  0.0 </x>
      <y>  0.0 </y>
      <z>  0.06 </z>
    </position>
    <direction>
      <x> -0.5 </x>
      <y>  0.0 </y>
      <z> -1.0 </z>
    </direction>
    <ambient>
      <r>  0.8 </r>
      <g>  0.404 </g>
      <b>  0.2 </b>
      <a>  1.0 </a>
    </ambient>
    <diffuse>
      <r>  0.8 </r>
      <g>  0.404 </g>
      <b>  0.2 </b>
      <a>  1.0 </a>
    </diffuse>
    <specular>
      <r>  0.3 </r>
      <g>  0.3 </g>
      <b>  0.3 </b>
      <a>  1.0 </a>
    </specular>
    <dim-factor>
      <property>systems/electrical/outputs/instrument-lights[0]</property>
      <!-- optional begin -->
      <factor>0.04</factor>
      <offset>0</offset>
      <min>0</min>
      <max>1</max>
      <!-- optional end -->
    </dim-factor>
    <attenuation>
      <c>  1.0 </c>
      <l>  0.6 </l>
      <q>  2.0 </q>
    </attenuation>
    <exponent> 12.0   </exponent>
    <cutoff>   45.0   </cutoff>
    <near-m>    0.0   </near-m>
    <far-m>     0.65   </far-m>
  </animation>

<!-- If you need to change scale of the light source, use and adapt : -->
<!--
